{
  "info": {
    "name": "University Portal API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Sample requests for authentication, attendance, assignments, and admin management"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Student Two\",\n  \"email\": \"student2@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"STUDENT\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "Auth - Login (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Auth - Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/me",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "me"
          ]
        }
      }
    },
    {
      "name": "Student - Dashboard",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{studentToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/student/dashboard",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "student",
            "dashboard"
          ]
        }
      }
    },
    {
      "name": "Faculty - Mark Attendance Batch",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{facultyToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"className\": \"CSE101\",\n  \"date\": \"2026-02-15\",\n  \"records\": [\n    { \"studentId\": 1, \"status\": \"PRESENT\" },\n    { \"studentId\": 4, \"status\": \"ABSENT\" }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/attendance/mark-batch",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "attendance",
            "mark-batch"
          ]
        }
      }
    },
    {
      "name": "Admin - Stats",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/stats",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "admin",
            "stats"
          ]
        }
      }
    },
    {
      "name": "Admin - Attendance Report",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/attendance/report?className=CSE101&startDate=2026-02-01&endDate=2026-02-28",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "attendance",
            "report"
          ],
          "query": [
            {
              "key": "className",
              "value": "CSE101"
            },
            {
              "key": "startDate",
              "value": "2026-02-01"
            },
            {
              "key": "endDate",
              "value": "2026-02-28"
            }
          ]
        }
      }
    },
    {
      "name": "Student - Submit Assignment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{studentToken}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "studentId",
              "value": "1",
              "type": "text"
            },
            {
              "key": "course",
              "value": "CSE101",
              "type": "text"
            },
            {
              "key": "assignmentTitle",
              "value": "Unit 2 Case Study",
              "type": "text"
            },
            {
              "key": "file",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/assignments/submit",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "assignments",
            "submit"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "studentToken",
      "value": ""
    },
    {
      "key": "facultyToken",
      "value": ""
    },
    {
      "key": "adminToken",
      "value": ""
    }
  ]
}